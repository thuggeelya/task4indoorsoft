<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employeeEdit.caption"
        focusComponent="form"
        messagesPack="ru.company.task4indoorsoft.web.screens.employee">
    <data>
        <instance id="employeeDc"
                  class="ru.company.task4indoorsoft.entity.Employee"
                  view="view-employees">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="employeeDc">
            <column width="350px">
                <textField id="lastNameField" property="lastName"/>
                <textField id="nameField" property="name"/>
                <textField id="patronymicField" property="patronymic"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
