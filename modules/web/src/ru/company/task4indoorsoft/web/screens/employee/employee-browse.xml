<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employeeBrowse.caption"
        focusComponent="employeesTable"
        messagesPack="ru.company.task4indoorsoft.web.screens.employee">
    <data readOnly="true">
        <collection id="employeesDc"
                    class="ru.company.task4indoorsoft.entity.Employee"
                    view="view-employees">
            <loader id="employeesDl">
                <query>
                    <![CDATA[select e from Employee e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="employeesTable"
            spacing="true">
        <filter id="filter"
                applyTo="employeesTable"
                dataLoader="employeesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="employeesTable"
                    width="100%"
                    dataContainer="employeesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="lastName"/>
                <column id="name"/>
                <column id="patronymic"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="employeesTable.create"/>
                <button id="editBtn" action="employeesTable.edit"/>
                <button id="removeBtn" action="employeesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
